% --- Page Setup ---
\geometry{
    a5paper,
    top=2.5cm,
    bottom=2.5cm,
    left=2cm,
    right=2cm
}

% --- Colors ---
\definecolor{artisanblack}{HTML}{1A1A1A}
\definecolor{artisanblue}{HTML}{0D47A1}

% --- Headers & Footers ---
\pagestyle{fancy}
\fancyhf{}
\fancyhead[LE,RO]{\thepage}
\fancyhead[RE]{\textit{Titled Artisans Prince}}
\fancyhead[LO]{\textit{\leftmark}}
\renewcommand{\headrulewidth}{0.4pt}

% --- Title Formatting ---
\titleformat{\chapter}[display]
  {\normalfont\huge\bfseries\color{artisanblack}}
  {\chaptertitlename\ \thechapter}{20pt}{\Huge}
\titlespacing*{\chapter}{0pt}{50pt}{40pt}

% --- Custom Commands ---
\newcommand{\artisanTitle}[1]{
    \begin{center}
        \vspace*{2cm}
        {\Huge \textbf{#1}} \\
        \vspace{1cm}
        {\Large \textit{A Legacy by Gilang Teja Krishna}} \\
        \vfill
        {\large 2026}
    \end{center}
}
